<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="EditTextCustomStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/edittext_rounded_border</item>
    </style>

    <style name="BigButtonCustomStyle">
        <item name="height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="LoginWithOthers">
        <item name="cornerRadius">10dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="backgroundTint">#D9D9D9</item>
    </style>


</resources>